{
  "Urls": "https://localhost/",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Yarp": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AzureAd": {
    "ClientId": "253600a6-46b5-425f-ab7e-d70df34c97ae",
    "TenantId": "5697ac0d-aec6-4e7d-9437-986d6cac2590",
    "Instance": "https://login.microsoftonline.com",
  },
  "ReverseProxy": {
    "Routes": {
      "minimumroute": {
        "ClusterId": "minimumcluster",
        "Order": 1000,
        "Match": {
          "Path": "{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated",
        "Transforms": [
          {
            "RequestHeaderOriginalHost": "true"
          },
          {
            "X-Forwarded": "proto,host,for,prefix"
          },
          {
            "RequestHeadersCopy": "true"
          },
          {
            "RequestHeader": "AUTHORIZATION",
            "Set": "Basic ZGV2ZWxvcGVyQG1lbGNoZXIuaXQ6MGE1MjBjNjIwMDBmNjY5YmJiOWY3NzdlNzVhZmE4ODI2YjBjYmI1Ng=="
          }
        ]
      },
      "saml": {
        "ClusterId": "minimumcluster",
        "Order": 100,
        "Match": {
          "Path": "/saml/consume"
        },
        "Transforms": [
          {
            "RequestHeaderOriginalHost": "true"
          },
          {
            "X-Forwarded": "proto,host,for,prefix"
          },
          {
            "RequestHeadersCopy": "true"
          }
        ]
      }
    },
    "Clusters": {
      "minimumcluster": {
        "Destinations": {
          "ghe": {
            "Address": "https://20.52.151.52", //IP of the GHE cluster
            "Health": "https://20.52.151.52"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": "true",
            "Interval": "00:01:00", //todo adjust healthcheck probe
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/status"
          }
        },
        "Metadata": {
          "ConsecutiveFailuresHealthPolicy.Threshold": "3"
        },
        "HttpClient": {
          "ValidateRemoteCertificate": false, //TODO: allow all certificates
          "DangerousAcceptAnyServerCertificate": true //TODO: allow all certificates
        }
      }
    }
  }
}